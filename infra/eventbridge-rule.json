{
  "Name": "weekly-report-scheduler",
  "Description": "매주 일요일 자정에 주간 리포트 생성 Lambda를 트리거합니다",
  "ScheduleExpression": "cron(0 0 ? * SUN *)",
  "State": "ENABLED",
  "Targets": [
    {
      "Id": "weekly-report-lambda-target",
      "Arn": "arn:aws:lambda:us-east-1:ACCOUNT_ID:function:weekly-report-scheduler",
      "Input": "{\"source\": \"eventbridge\", \"action\": \"weekly-report\"}"
    }
  ]
}

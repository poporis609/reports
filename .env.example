# 애플리케이션 설정
APP_NAME=weekly-report-service
DEBUG=false

# AWS 설정
AWS_REGION=us-east-1

# AWS Secrets Manager 사용 여부
USE_SECRETS_MANAGER=true
DB_SECRET_NAME=library-api/db-password
APP_CONFIG_SECRET_NAME=weekly-report/app-config

# Bedrock Flow 설정 (Secrets Manager에서 가져오거나 여기서 설정)
# BEDROCK_FLOW_ID=
# BEDROCK_FLOW_ALIAS_ID=
BEDROCK_TIMEOUT=30

# 데이터베이스 설정
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
# DB_PASSWORD는 AWS Secrets Manager에서 가져옴

# Cognito 설정 (Secrets Manager에서 가져오거나 여기서 설정)
# COGNITO_USER_POOL_ID=
# COGNITO_CLIENT_ID=

# SES 설정
SES_SENDER_EMAIL=noreply@aws11.shop

# API 설정
API_BASE_URL=https://api.aws11.shop
